                <% end %>
              </ul>
            <div class="bottom"></div>
          </div>
          <ul id="search_result">
            <% @species.each do |s| %>
              <li><%= image_tag('demo_thumb.jpg', :class => 'vtip', :title => "Clown fish", :onClick => 'moreInfo(1)') %></li>
            <% end %>
          </ul>
