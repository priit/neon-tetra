            </li>
          </ul>
          <div id="tank_properties">
            <div class="progressbar">30%</div>
          </div>
          <div class="button back" onclick="prevStep('step2')">
           &laquo; Back to Adding
          </div>
        </div>
      </div>
      
      <!-- /wizard -->
      
      <div id="footer">
        <div id="account">
          <% if current_user %>
            <%= truncate(current_user.name) %>
            <%= link_to 'Sign out', destroy_user_session_path %>
          <% else %>
            <%= link_to_rpx 'Sign up', user_session_url %>
            <%= link_to_rpx 'Sign in', user_session_url %>
          <% end %>
          <%= javascript_include_rpx(user_session_url) %>
        </div>
      </div>
      
    </div>
